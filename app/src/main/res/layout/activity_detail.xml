<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="TouchTargetSizeCheck"
    tools:context=".activity.DetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/Rela1"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/BackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/left_arrow_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/heart_icon" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rela2"
            android:layout_marginTop="15dp"
            android:layout_below="@id/Rela1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TextName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ImageDetail"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_below="@id/TextName"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/img3"
                android:scaleType="fitXY" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rela3"
            android:layout_below="@id/Rela2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp">
            <RelativeLayout
                android:id="@+id/rela1"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/Text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Price: "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/Text1"
                    android:text="20$"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/b_black"
                    android:layout_marginTop="43dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela2"
                android:layout_below="@id/rela1"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/Text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Quantity: "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <RelativeLayout
                    android:id="@+id/rela6"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@id/Text2"
                    android:layout_centerInParent="true"
                    android:background="@drawable/background1">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/arrow_down" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/b_black"
                    android:layout_marginTop="44dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela3"
                android:layout_below="@id/rela2"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/Text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Delivery: "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <RelativeLayout
                    android:id="@+id/rela7"
                    android:layout_width="95dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/Text3"
                    android:background="@drawable/background2">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="8dp"
                        android:text="Cambodia"
                        android:textColor="#2C3E50"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/arrow_down" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/b_black"
                    android:layout_marginTop="44dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela4"
                android:layout_below="@id/rela3"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/Text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Size: "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/TextSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/Text4"
                    android:text="1m"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/b_black"
                    android:layout_marginTop="44dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela5"
                android:layout_below="@id/rela4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/Text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description: "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/TextDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Text5"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Your initial text here"/>
                <Button
                    android:id="@+id/moreButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-24dp"
                    android:layout_marginTop="-12dp"
                    android:textSize="18sp"
                    android:background="@android:color/transparent"
                    android:text="more..."
                    android:textColor="@color/blue"
                    android:layout_below="@id/TextDescription"/>

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/BtnAddCart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@id/Rela3"
            android:background="@drawable/splash_background">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/BtnAddCart" />


    </RelativeLayout>

</ScrollView>